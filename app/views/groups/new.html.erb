<div class="row text-center">
  <h1> Group Registration: </h1>
  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
    <%= form_for @group do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br><br>
      <%= f.label :description %><br>
      <%= f.text_area :description %><br><br>
      <%= f.submit "Create Group", class:"btn btn-primary btn-sm"%>
    <% end %>
    </div>
   


